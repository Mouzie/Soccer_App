<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="10dp"
    android:background="#8f8c8c"
    tools:context="com.soccer.api.soccer_app.com.soccer.api.soccer_app.Controller.MainActivity">

        <RelativeLayout
            android:id="@+id/teams_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/soccer_team"
                android:padding="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/team_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/soccer_team"
                android:layout_toEndOf="@+id/soccer_team" />

        </RelativeLayout>

</android.support.v7.widget.CardView>