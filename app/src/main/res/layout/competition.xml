<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtId"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txtCaption"
            android:layout_below="@+id/txtId"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txtLeague"
            android:layout_below="@+id/txtCaption"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txtYear"
            android:layout_below="@+id/txtLeague"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txtCurrentMatchDay"
            android:layout_below="@+id/txtYear"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txtNumberOfMatches"
            android:layout_below="@+id/txtCurrentMatchDay"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txtNumberOfTeams"
            android:layout_below="@+id/txtNumberOfMatches"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txtNumberOfGames"
            android:layout_below="@+id/txtNumberOfTeams"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txtLastUpdate"
            android:layout_below="@+id/txtNumberOfGames"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>