<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtFixtureDate"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_below="@+id/txtFixtureDate"
            android:layout_gravity="center"
            android:id="@+id/txtStatus"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <TextView
            android:layout_below="@+id/txtStatus"
            android:layout_gravity="center"
            android:id="@+id/txtMatchDay"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/txtHomeTeamName"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/txtMatchDay"
            android:layout_alignBottom="@+id/txtMatchDay"/>
        <TextView
            android:layout_below="@+id/txtHomeTeamName"
            android:padding="5dp"
            android:layout_gravity="center"
            android:id="@+id/txtAwayTeamName"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/txtResults"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/txtAwayTeamName" />
        <TextView
            android:id="@+id/txtHalfTime"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true" />
    </LinearLayout>

</android.support.v7.widget.CardView>