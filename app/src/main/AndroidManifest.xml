<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soccer.api.soccer_app">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".com.soccer.api.soccer_app.Controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".com.soccer.api.soccer_app.Controller.TeamsActivity" />
        <activity android:name=".com.soccer.api.soccer_app.Controller.PlayersActivity" />
        <activity android:name=".com.soccer.api.soccer_app.Controller.SinglePlayerActivity" />
        <activity android:name=".com.soccer.api.soccer_app.Controller.FixturesActivity" />
        <activity android:name=".SinlgeFixtureActivity" />
        <activity android:name=".com.soccer.api.soccer_app.Controller.SingleFixtureActivity" />
        <activity android:name=".com.soccer.api.soccer_app.Controller.CompetitionActivity" />
        <activity android:name=".com.soccer.api.soccer_app.Controller.SingleCompetitionActivity"></activity>
    </application>

</manifest>